<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/big">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPickTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/big"
            android:layout_weight="1"
            android:text="@string/txtPickTime" />

        <TextView
            android:id="@+id/txtPickedTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="@string/hintClickTime" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/big"
        android:src="@drawable/pizza_clock" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtPacking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txtPacking" />

        <Spinner
            android:id="@+id/spPckOpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="202dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/small"
        android:src="@drawable/pizza_carton" />

    <Button
        android:id="@+id/btnPickupOK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnOK" />

</LinearLayout>